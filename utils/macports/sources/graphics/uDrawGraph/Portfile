universal_variant no

# this is a binary so don't try compiling it

configure {}
build {}

destroot {
    xinstall -d ${destroot}${prefix}/lib/${name}
    xinstall -m 755 -W ${workpath}/${distname}/bin/ ${name} ${destroot}${prefix}/bin/
    xinstall -m 755 -W ${workpath}/${distname}/bin/ .${name}-wrapper ${destroot}${prefix}/bin/
    copy ${workpath}/${distname} ${destroot}${prefix}/lib/${name}
}

